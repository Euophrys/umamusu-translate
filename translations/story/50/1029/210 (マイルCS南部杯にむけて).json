            "pathId": 6608244929444396868,
            "blockIdx": 35
        },
        {
            "jpName": "ユキノビジン",
            "enName": "",
            "jpText": "自信は正直……ないです。\nけンど……！",
            "enText": "",
            "nextBlock": 37,
            "origClipLength": 69,
            "animData": [
                {
                    "origLen": 21,
                    "pathId": -869543935874407151
                },
