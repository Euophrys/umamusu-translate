            "blockIdx": 6
        },
        {
            "jpName": "村のウマ娘の子ども",
            "enName": "",
            "jpText": "ユキノちゃーん！\n久しぶりだなはん。",
            "enText": "",
            "nextBlock": 8,
            "origClipLength": 68,
            "animData": [
                {
                    "origLen": 79,
                    "pathId": -5514257957003319197
