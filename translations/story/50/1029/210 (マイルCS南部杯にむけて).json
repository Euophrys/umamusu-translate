        },
        {
            "jpName": "観客たち",
            "enName": "",
            "jpText": "応援してっぞ～！\n頑張れ～！",
            "enText": "",
            "nextBlock": 6,
            "origClipLength": 63,
            "choices": [
                {
                    "jpText": "“ホーム”の熱気はすごいな",
                    "enText": "",
