            "pathId": 4286202675709037666,
            "blockIdx": 24
        },
        {
            "jpName": "モノローグ",
            "enName": "",
            "jpText": "そして、発走時刻が近づき――",
            "enText": "",
            "nextBlock": 26,
            "origClipLength": 63,
            "animData": [
                {
                    "origLen": 23,
                    "pathId": 2681238243926146021
                },
                {
                    "origLen": 23,
                    "pathId": -4466343951292708872
                }
            ],
            "pathId": -6582811779086669629,
            "blockIdx": 25
        },
        {
            "jpName": "ユキノビジン",
            "enName": "",
            "jpText": "うぅン……。",
            "enText": "",
            "nextBlock": 27,
            "origClipLength": 66,
            "animData": [
                {
                    "origLen": 133,
                    "pathId": 8785666534327934071
                },
                {
                    "origLen": 126,
                    "pathId": -4272506532837708156
                }
