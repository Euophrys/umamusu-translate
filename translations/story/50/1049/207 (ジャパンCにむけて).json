            "pathId": -1217816350926308538,
            "blockIdx": 5
        },
        {
            "jpName": "ナカヤマフェスタ",
            "enName": "",
            "jpText": "失礼――……っと。",
            "enText": "",
            "nextBlock": 7,
            "origClipLength": 56,
            "animData": [
                {
                    "origLen": 74,
                    "pathId": 1005871987336714117
