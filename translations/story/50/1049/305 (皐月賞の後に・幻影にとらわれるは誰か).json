            "pathId": -7484946763142207391,
            "blockIdx": 21
        },
        {
            "jpName": "ナカヤマフェスタ",
            "enName": "",
            "jpText": "どうぞ？",
            "enText": "",
            "nextBlock": 23,
            "origClipLength": 50,
            "animData": [
                {
                    "origLen": 19,
                    "pathId": -7625336637860749638
