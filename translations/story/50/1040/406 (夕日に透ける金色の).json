    "text": [
        {
            "jpName": "モノローグ",
            "enName": "",
            "jpText": "トレーニング中、ユキノビジンが\n差し入れを持ってきてくれた。",
            "enText": "During training, Yukinobijin \nbrought me some goodies.",
            "nextBlock": 2,
            "origClipLength": 84,
            "animData": [
                {
                    "origLen": 105,
                    "pathId": 5891486673286452476
                },
                {
                    "origLen": 184,
