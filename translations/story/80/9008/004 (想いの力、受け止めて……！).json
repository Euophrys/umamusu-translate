            ],
            "pathId": -7644979784747604472,
            "blockIdx": 22
        },
        {
            "jpName": "ライトハロー",
            "enName": "",
            "jpText": "……っ！　ありがとうございます！",
            "enText": "",
            "nextBlock": 24,
            "origClipLength": 65,
            "animData": [
                {
                    "origLen": 20,
                    "pathId": -7793312510854609455
