            ],
            "pathId": 2469060670417934186,
            "blockIdx": 1
        },
        {
            "jpName": "メジロパーマー",
            "enName": "Mejiro Palmer",
            "jpText": "う～～～ん、迷う……！\nどっちにしよっかなぁ～……！",
            "enText": "Hmmm, I'm confused…! Which one do \nyou think I should go for~…!",
            "nextBlock": 3,
            "origClipLength": 78,
            "choices": [
                {
                    "jpText": "どうした？",
                    "enText": "What's up?",
                    "nextBlock": 3
                },
                {
                    "jpText": "どうしたの？",
                    "enText": "What's the matter?",
                    "nextBlock": 3
                }
